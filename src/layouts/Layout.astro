---
interface Props {
    title: string;
    description?: string;
    image?: string;
}

const {
    title,
    description = "Huntertech - Professional IT Solutions & Revit Management Services",
    image = "/images/huntertech_logo.png"
} = Astro.props;

import Favicons from '../components/Favicons.astro';
---

