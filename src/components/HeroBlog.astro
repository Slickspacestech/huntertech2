---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  subtitle: string;
  backgroundImage: ImageMetadata;
  backgroundImageAlt: string;
}

const {
  title,
  subtitle,
  backgroundImage,
  backgroundImageAlt
} = Astro.props;
---

<section class="hero">
  <div class="hero-image">
    <Image 
      src={backgroundImage}
      alt={backgroundImageAlt}
      class="bg-image"
      quality="high"
    />
  </div>
  <div class="hero-overlay"></div>
  <div class="container">
    <div class="hero-content animate-fade-in">
      <h1>{title}</h1>
      <p class="subtitle">{subtitle}</p>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    color: var(--white);
    padding: 80px 0;
    margin-bottom: 40px;
    overflow: hidden;
  }

  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(44, 62, 80, 0.8), rgba(52, 152, 219, 0.7));
    z-index: 1;
  }

  .container {
    width: 100%;
    max-width: 100%;
    padding: 0;
    margin: 0;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
    padding: 0 var(--spacing-xl);
  }

  h1 {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .subtitle {
    font-size: 1.5rem;
    font-weight: 400;
    max-width: 800px;
    margin: 0 auto;
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 50vh;
      padding: 60px 0;
    }

    h1 {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.25rem;
    }
  }
</style> 