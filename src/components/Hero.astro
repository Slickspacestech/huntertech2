---
interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  backgroundImage?: string;
}

const {
  title,
  subtitle,
  ctaText = "Get Started",
  ctaLink = "/contact",
  backgroundImage = "/images/architect_engineer_tech.webp"
} = Astro.props;
---

<section class="hero" style={`background-image: url('${backgroundImage}')`}>
  <div class="hero-overlay"></div>
  <div class="container">
    <div class="hero-content animate-fade-in">
      <h1>{title}</h1>
      <p class="subtitle">{subtitle}</p>
      <div class="cta-buttons">
        <a href={ctaLink} class="btn btn-primary">
          {ctaText}
          <i class="fas fa-arrow-right"></i>
        </a>
        <a href="#solutions" class="btn btn-secondary white-text">
          Our Solutions
          <i class="fas fa-chevron-right"></i>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), 
      image-set(
        url('/images/architect_engineer_tech.avif') type('image/avif'),
        url('/images/architect_engineer_tech.webp') type('image/webp'),
        url('/images/architect_engineer_tech.jpeg') type('image/jpeg')
      );
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    color: var(--white);
    padding: 120px 0;
    margin-bottom: 60px;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(44, 62, 80, 0.8), rgba(52, 152, 219, 0.7));
    z-index: 1;
  }

  .container {
    width: 100%;
    max-width: 100%;
    padding: 0;
    margin: 0;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
    padding: 0 var(--spacing-xl);
  }

  .hero h1 {
    font-size: 4.5rem;
    font-weight: 700;
    color: var(--white);
    margin-bottom: var(--spacing-md);
    line-height: 1.2;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .subtitle {
    font-size: 1.75rem;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: var(--spacing-lg);
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: 1.25rem 2.5rem;
    font-size: 1.2rem;
    font-weight: 600;
    border-radius: var(--radius-md);
    transition: all var(--transition-normal);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .btn i {
    transition: transform var(--transition-normal);
  }

  .btn:hover i {
    transform: translateX(5px);
  }

  .btn-primary {
    background-color: var(--button-color);
    color: var(--white);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .btn-primary:hover {
    background-color: var(--button-hover);
    transform: translateY(-2px);
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
  }

  .btn-secondary {
    background-color: transparent;
    border: 2px solid var(--button-color);
    color: var(--button-color);
  }

  .btn-secondary:hover {
    background-color: var(--button-color);
    color: var(--white);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 90vh;
    }

    .hero h1 {
      font-size: 2.75rem;
    }

    .subtitle {
      font-size: 1.25rem;
    }

    .cta-buttons {
      flex-direction: column;
      gap: var(--spacing-sm);
    }

    .btn {
      width: 100%;
      justify-content: center;
      padding: 1rem 2rem;
      font-size: 1.1rem;
    }
  }
</style> 