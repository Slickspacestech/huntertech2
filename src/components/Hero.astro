---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import ArrowRight from './icons/arrow-right.astro';

interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  backgroundImage: ImageMetadata;
  backgroundImageAlt?: string;
}

const {
  title,
  subtitle,
  ctaText = "Get Started",
  ctaLink = "/contact/?form_conversion=hero-cta",
  backgroundImage,
  backgroundImageAlt = "Hero background image"
} = Astro.props;
---

<section class="hero">
  <Image 
    src={backgroundImage}
    alt={backgroundImageAlt}
    width={1920}
    height={1080}
    class="hero-image"
    quality={90}
    format="webp"
    loading="eager"
    decoding="async"
  />
  <div class="hero-overlay"></div>
  <div class="container">
    <div class="hero-content animate-fade-in">
      <h1>{title}</h1>
      <p class="subtitle">{subtitle}</p>
      <div class="cta-buttons">
        {ctaText && (
          <a href={ctaLink} class="btn btn-primary">
            {ctaText}
            <ArrowRight color="var(--white)" />
          </a>
        )}
        <a href="https://outlook.office365.com/book/MeetwithHunterTech@huntertech.ca/" class="btn btn-secondary white-text">
          Book a Meeting
          <ArrowRight color="var(--button-color)" />
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    color: var(--white);
    padding: 120px 0;
    margin-bottom: 60px;
    overflow: hidden;
  }

  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(44, 62, 80, 0.8), rgba(52, 152, 219, 0.7));
    z-index: 1;
  }

  .container {
    width: 100%;
    max-width: 100%;
    padding: 0;
    margin: 0;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
    padding: 0 var(--spacing-xl);
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: 1.25rem 2.5rem;
    font-size: 1.2rem;
    font-weight: 600;
    border-radius: var(--radius-md);
    transition: all var(--transition-normal);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .btn svg {
    transition: transform var(--transition-normal);
  }

  .btn:hover svg {
    transform: translateX(5px);
  }

  .btn-primary {
    background-color: var(--button-color);
    color: var(--white);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .btn-primary:hover {
    background-color: var(--button-hover);
    transform: translateY(-2px);
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
  }

  .btn-secondary {
    background-color: transparent;
    border: 2px solid var(--button-color);
    color: var(--button-color);
  }

  .btn-secondary:hover {
    background-color: var(--button-color);
    color: var(--white);
  }

  .btn-secondary:hover svg {
    color: var(--white);
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 90vh;
    }

    .hero h1 {
      font-size: 2.75rem;
    }

    .cta-buttons {
      flex-direction: column;
      gap: var(--spacing-sm);
    }

    .btn {
      width: 100%;
      justify-content: center;
      padding: 1rem 2rem;
      font-size: 1.1rem;
    }
  }
</style> 