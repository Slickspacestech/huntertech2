---
interface Props {
    icon?: any;
    title: string;
    description: string;
}

const { icon: Icon, title, description } = Astro.props;
---

<div class="service-card">
    {Icon && (
        <div class="custom-icon">
            <Icon color="var(--primary-color)" />
        </div>
    )}
    <div class="service-content">
        <h4>{title}</h4>
        <p>{description}</p>
    </div>
</div>

<style>
    .service-card {
        background: var(--white);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        display: flex;
        gap: 1.5rem;
        align-items: flex-start;
        transition: transform 0.3s ease;
    }

    .service-card:hover {
        transform: translateY(-5px);
    }

    .service-card .custom-icon {
        margin-top: 0.25rem;
    }

    .service-card .custom-icon svg {
        width: 1.5rem;
        height: 1.5rem;
    }

    .service-content {
        flex: 1;
    }

    .service-content h4 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }

    .service-content p {
        color: var(--text-color);
        line-height: 1.6;
        margin: 0;
    }

    @media (max-width: 768px) {
        .service-card {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }

        .service-card .custom-icon {
            margin: 0 auto;
        }
    }
</style> 