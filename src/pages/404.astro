---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Page Not Found - Huntertech">
    <Header />
    <main class="error-page">
        <div class="container">
            <div class="error-content">
                <h1>404</h1>
                <h2>Page Not Found</h2>
                <p>Oops! The page you're looking for doesn't exist or has been moved.</p>
                <a href="/" class="home-button">
                    <i class="fas fa-home"></i> Back to Home
                </a>
            </div>
        </div>
    </main>
    <Footer />
</Layout>

<style>
    .error-page {
        min-height: calc(100vh - 80px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        background: linear-gradient(rgba(44, 62, 80, 0.9), rgba(44, 62, 80, 0.9)), url('/images/error-bg.jpg');
        background-size: cover;
        background-position: center;
        color: var(--white);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
        text-align: center;
    }

    .error-content h1 {
        font-size: 8rem;
        margin: 0;
        color: var(--secondary-color);
        line-height: 1;
    }

    .error-content h2 {
        font-size: 2.5rem;
        margin: 1rem 0;
    }

    .error-content p {
        font-size: 1.2rem;
        margin-bottom: 2rem;
        color: #ccc;
    }

    .home-button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background-color: var(--secondary-color);
        color: var(--white);
        padding: 1rem 2rem;
        border-radius: 5px;
        text-decoration: none;
        font-size: 1.1rem;
        transition: background-color 0.3s ease;
    }

    .home-button:hover {
        background-color: #2980b9;
    }

    @media (max-width: 768px) {
        .error-content h1 {
            font-size: 6rem;
        }

        .error-content h2 {
            font-size: 2rem;
        }

        .error-content p {
            font-size: 1rem;
        }
    }
</style> 