---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import SolutionsCTA from '../../components/SolutionsCTA.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import Cloud from '../../components/icons/cloud.astro';
import Lock from '../../components/icons/lock.astro';
import Work from '../../components/icons/work.astro';
import Certificate from '../../components/icons/certificate.astro';
import Headphones from '../../components/icons/headphones.astro';
import ChartLine from '../../components/icons/chart-line.astro';
import Shield from '../../components/icons/shield.astro';
import Cogs from '../../components/icons/Cogs.astro';
import Users from '../../components/icons/users.astro';
import GraduationHat from '../../components/icons/graduation-hat.astro';
import SEO from '../../components/SEO.astro';

const title = "Microsoft 365 Solutions | Cloud Productivity Services in Calgary & Vancouver";
const description = "Comprehensive Microsoft 365 solutions for businesses in Calgary and Vancouver. Enhance productivity with cloud-based collaboration, security, and business applications. Our expert team provides setup, migration, and ongoing support to maximize your Microsoft 365 investment.";
const keywords = [
    "Microsoft 365",
    "Office 365",
    "Cloud productivity",
    "Microsoft Teams",
    "SharePoint Online",
    "OneDrive for Business",
    "Microsoft 365 Calgary",
    "Microsoft 365 Vancouver"
];

const structuredData = {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Microsoft 365 Solutions",
    "provider": {
        "@type": "Organization",
        "name": "Huntertech",
        "url": "https://huntertech.ca"
    },
    "description": description,
    "areaServed": [
        {
            "@type": "City",
            "name": "Calgary",
            "address": {
                "@type": "PostalAddress",
                "addressRegion": "AB",
                "addressCountry": "CA"
            }
        },
        {
            "@type": "City",
            "name": "Vancouver",
            "address": {
                "@type": "PostalAddress",
                "addressRegion": "BC",
                "addressCountry": "CA"
            }
        }
    ],
    "serviceType": ["Microsoft 365", "Cloud Productivity", "Business Applications"],
    "offers": {
        "@type": "Offer",
        "availability": "https://schema.org/InStock"
    }
};
---

<Layout title={title} description={description}>
    <SEO
        title={title}
        description={description}
        canonicalURL="https://huntertech.ca/solutions/microsoft-365"
        keywords={keywords}
        type="website"
        image="/images/microsoft-365.webp"
    />
    <Header />
    <main class="service-page">
        <Hero 
            title="Microsoft 365"
            subtitle="Empower your business with Microsoft 365's comprehensive suite of productivity tools"
            backgroundImage="/images/m365.webp"
            ctaText="Get Started"
            ctaLink="/contact"
        />

        <section class="content">
            <div class="container">
                <div class="content-grid">
                    <div class="main-content">
                        <h2>Microsoft 365 Solutions</h2>
                        <p>We provide expert Microsoft 365 implementation, management, and support services to help your business leverage the full power of the Microsoft ecosystem. From setup to ongoing optimization, we ensure your team gets the most out of their Microsoft 365 tools.</p>
                        
                        <div class="services-section">
                            <h3>Our Microsoft 365 Services</h3>
                            <div class="services-grid">
                                <ServiceCard 
                                    title="Implementation & Setup"
                                    description="Seamless migration and configuration of Microsoft 365 services"
                                />
                                <ServiceCard 
                                    title="User Management"
                                    description="Comprehensive user setup, licensing, and access control"
                                />
                                <ServiceCard 
                                    title="Security & Compliance"
                                    description="Advanced security features and compliance management"
                                />
                                <ServiceCard 
                                    title="Training & Support"
                                    description="User training and ongoing technical support"
                                />
                            </div>
                        </div>

                        <h3>Why Choose Our Microsoft 365 Services?</h3>
                        <div class="benefits-grid">
                            <div class="benefit-card">
                                <Certificate color="var(--primary-color)" />
                                <h4>Microsoft Certified</h4>
                                <p>Expert certified professionals</p>
                            </div>
                            <div class="benefit-card">
                                <Headphones color="var(--primary-color)" />
                                <h4>Friendly Support</h4>
                                <p>We are here to help you</p>
                            </div>
                            <div class="benefit-card">
                                <ChartLine color="var(--primary-color)" />
                                <h4>Performance</h4>
                                <p>Optimized Microsoft 365 setup</p>
                            </div>
                            <div class="benefit-card">
                                <Shield color="var(--primary-color)" />
                                <h4>Regular Audits</h4>
                                <p>We audit your Microsoft 365 setup to ensure it is secure</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <SolutionsCTA 
            title="Ready to Optimize Your Microsoft 365?"
            description="Contact us today to discuss your Microsoft 365 needs and discover how we can help enhance your team's productivity and collaboration."
            buttonText="Contact Us"
            buttonLink="/contact"
        />
    </main>
    <Footer />
</Layout>

<style>
    .hero {
        background: var(--primary-color);
        color: var(--white);
        padding: 4rem 0;
        text-align: center;
    }

    .content {
        padding: 4rem 0;
        background: var(--white);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .content-grid {
        display: grid;
        gap: 2rem;
    }

    .main-content h2 {
        color: var(--primary-color);
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    .main-content h3 {
        color: var(--primary-color);
        font-size: 1.5rem;
        margin: 2rem 0 1rem;
    }

    .main-content p {
        color: var(--text-color);
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .services-section {
        background: var(--secondary-bg);
        padding: 3rem;
        border-radius: 10px;
        margin: 2rem 0;
    }

    .services-section h3 {
        margin-top: 0;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .benefits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .benefit-card {
        background: var(--white);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease;
    }

    .benefit-card:hover {
        transform: translateY(-5px);
    }

    .benefit-card svg {
        width: 2rem;
        height: 2rem;
        margin-bottom: 1rem;
    }

    .benefit-card h4 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }

    @media (max-width: 768px) {
        .hero h1 {
            font-size: 2rem;
        }

        .main-content h2 {
            font-size: 1.75rem;
        }

        .services-grid,
        .benefits-grid {
            grid-template-columns: 1fr;
        }
    }
</style> 