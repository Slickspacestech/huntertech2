---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import SolutionsCTA from '../../components/SolutionsCTA.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import Lock from '../../components/icons/lock.astro';
import Tachometer from '../../components/icons/tachometer.astro';
import Handshake from '../../components/icons/handshake2.astro';
import Cogs from '../../components/icons/Cogs.astro';
import SEO from '../../components/SEO.astro';
import hybridWorkplaceImage from '../../assets/images/hybrid-work-bg.webp';

const title = "Hybrid Workplace Solutions Calgary & Vancouver | Remote Work";
const description = "Complete hybrid workplace solutions in Calgary and Vancouver. Secure remote access, collaboration tools, and cloud infrastructure for flexible work environments.";
const keywords = [
    "Hybrid workplace solutions",
    "Remote work technology",
    "Virtual collaboration",
    "Remote access",
    "Team management",
    "Workflow integration",
    "Hybrid work Calgary",
    "Hybrid work Vancouver"
];

const structuredData = {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Hybrid Workplace Solutions",
    "provider": {
        "@type": "Organization",
        "name": "Huntertech",
        "url": "https://huntertech.ca"
    },
    "description": description,
    "areaServed": [
        {
            "@type": "City",
            "name": "Calgary",
            "address": {
                "@type": "PostalAddress",
                "addressRegion": "AB",
                "addressCountry": "CA"
            }
        },
        {
            "@type": "City",
            "name": "Vancouver",
            "address": {
                "@type": "PostalAddress",
                "addressRegion": "BC",
                "addressCountry": "CA"
            }
        }
    ],
    "serviceType": ["Hybrid Workplace", "Remote Work", "Collaboration Tools"],
    "offers": {
        "@type": "Offer",
        "availability": "https://schema.org/InStock"
    }
};
---

<Layout title={title} description={description}>
    <SEO 
        title={title}
        description={description}
        canonicalURL="https://huntertech.ca/solutions/hybrid-workplace"
        keywords={keywords}
        type="website"
        image={hybridWorkplaceImage.src}
    />
    <Header />
    <main class="service-page">
        <Hero 
            title="Hybrid Workplace"
            subtitle="Seamless technology solutions for the modern hybrid workplace"
            backgroundImage={hybridWorkplaceImage}
            ctaText="Get Started"
            ctaLink="/contact"
        />

        <section class="content">
            <div class="container">
                <div class="content-grid">
                    <div class="main-content">
                        <h2>Modern Workplace Solutions</h2>
                        <p>Our hybrid workplace solutions enable your team to work efficiently from anywhere, ensuring seamless collaboration and productivity whether in the office or remotely. We provide the technology infrastructure and support needed for a successful hybrid work environment.</p>
                        
                        <div class="services-section">
                            <h3>Hybrid Work Solutions</h3>
                            <div class="services-grid">
                                <ServiceCard 
                                    title="Virtual Collaboration"
                                    description="Advanced video conferencing and team collaboration tools"
                                />
                                <ServiceCard 
                                    title="Remote Access"
                                    description="Secure remote access to company resources from any device"
                                />
                                <ServiceCard 
                                    title="Team Management"
                                    description="Tools for managing and coordinating distributed teams"
                                />
                                <ServiceCard 
                                    title="Workflow Integration"
                                    description="Seamless integration between office and remote work"
                                />
                            </div>
                        </div>

                        <h3>Why Choose Our Hybrid Solutions?</h3>
                        <div class="features-grid">
                            <div class="feature-card">
                                <Lock color="var(--primary-color)" />
                                <h4>Secure Access</h4>
                                <p>Secure remote access to your business resources.</p>
                            </div>
                            <div class="feature-card">
                                <Tachometer color="var(--primary-color)" />
                                <h4>Performance Optimization</h4>
                                <p>Optimized solutions for seamless remote work.</p>
                            </div>
                            <div class="feature-card">
                                <Handshake color="var(--primary-color)" />
                                <h4>Collaboration Tools</h4>
                                <p>Advanced tools for team collaboration.</p>
                            </div>
                            <div class="feature-card">
                                <Cogs color="var(--primary-color)" />
                                <h4>Workflow Automation</h4>
                                <p>Automated processes for increased efficiency.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <SolutionsCTA 
            title="Ready to Transform Your Workplace?"
            description="Contact us today to discuss your hybrid workplace needs and discover how we can help create a seamless work environment for your team."
            buttonText="Contact Us"
            buttonLink="/contact"
        />
    </main>
    <Footer />
</Layout>

<style>
    

    .content {
        padding: 4rem 0;
        background: var(--white);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .content-grid {
        display: grid;
        gap: 2rem;
    }

    .main-content h2 {
        color: var(--primary-color);
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    .main-content h3 {
        color: var(--primary-color);
        font-size: 1.5rem;
        margin: 2rem 0 1rem;
    }

    .main-content p {
        color: var(--text-color);
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .services-section {
        background: var(--secondary-bg);
        padding: 3rem;
        border-radius: 10px;
        margin: 2rem 0;
    }

    .services-section h3 {
        margin-top: 0;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .feature-card {
        background: var(--white);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-5px);
    }

    .feature-card svg {
        width: 2.5rem;
        height: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .feature-card h4 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }

    .feature-card p {
        color: var(--text-color);
        line-height: 1.6;
    }

    @media (max-width: 768px) {
        .hero h1 {
            font-size: 2rem;
        }

        .main-content h2 {
            font-size: 1.75rem;
        }

        .services-grid,
        .features-grid {
            grid-template-columns: 1fr;
        }
    }
</style> 