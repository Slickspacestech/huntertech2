---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import SolutionsCTA from '../../components/SolutionsCTA.astro';
import ServiceCard from '../../components/ServiceCard.astro';
---

<Layout title="Hybrid Workplace - Huntertech">
    <Header />
    <main>
        <section class="hero">
            <div class="container">
                <h1>Hybrid Workplace</h1>
                <p>Seamless technology solutions for the modern hybrid workplace</p>
            </div>
        </section>

        <section class="content">
            <div class="container">
                <div class="content-grid">
                    <div class="main-content">
                        <h2>Modern Workplace Solutions</h2>
                        <p>Our hybrid workplace solutions enable your team to work efficiently from anywhere, ensuring seamless collaboration and productivity whether in the office or remotely. We provide the technology infrastructure and support needed for a successful hybrid work environment.</p>
                        
                        <div class="services-section">
                            <h3>Hybrid Work Solutions</h3>
                            <div class="services-grid">
                                <ServiceCard 
                                    icon="fa-video"
                                    title="Virtual Collaboration"
                                    description="Advanced video conferencing and team collaboration tools"
                                />
                                <ServiceCard 
                                    icon="fa-mobile-alt"
                                    title="Remote Access"
                                    description="Secure remote access to company resources from any device"
                                />
                                <ServiceCard 
                                    icon="fa-users"
                                    title="Team Management"
                                    description="Tools for managing and coordinating distributed teams"
                                />
                                <ServiceCard 
                                    icon="fa-sync"
                                    title="Workflow Integration"
                                    description="Seamless integration between office and remote work"
                                />
                            </div>
                        </div>

                        <h3>Why Choose Our Hybrid Solutions?</h3>
                        <div class="benefits-grid">
                            <div class="benefit-card">
                                <i class="fas fa-lock"></i>
                                <h4>Secure Access</h4>
                                <p>Protected remote access to company resources</p>
                            </div>
                            <div class="benefit-card">
                                <i class="fas fa-tachometer-alt"></i>
                                <h4>High Performance</h4>
                                <p>Optimized for seamless remote work</p>
                            </div>
                            <div class="benefit-card">
                                <i class="fas fa-handshake"></i>
                                <h4>Easy Collaboration</h4>
                                <p>Tools for effective team collaboration</p>
                            </div>
                            <div class="benefit-card">
                                <i class="fas fa-cogs"></i>
                                <h4>Flexible Setup</h4>
                                <p>Customizable for your specific needs</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <SolutionsCTA 
            title="Ready to Transform Your Workplace?"
            description="Contact us today to discuss your hybrid workplace needs and discover how we can help create a seamless work environment for your team."
            buttonText="Contact Us"
            buttonLink="/contact"
        />
    </main>
    <Footer />
</Layout>

<style>
    .hero {
        background: var(--primary-color);
        color: var(--white);
        padding: 4rem 0;
        text-align: center;
        background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/images/hybrid-work-bg.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .hero h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .hero p {
        font-size: 1.2rem;
        max-width: 600px;
        margin: 0 auto;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    }

    .content {
        padding: 4rem 0;
        background: var(--white);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .content-grid {
        display: grid;
        gap: 2rem;
    }

    .main-content h2 {
        color: var(--primary-color);
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    .main-content h3 {
        color: var(--primary-color);
        font-size: 1.5rem;
        margin: 2rem 0 1rem;
    }

    .main-content p {
        color: var(--text-color);
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .services-section {
        background: var(--secondary-bg);
        padding: 3rem;
        border-radius: 10px;
        margin: 2rem 0;
    }

    .services-section h3 {
        margin-top: 0;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .benefits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .benefit-card {
        background: var(--white);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease;
    }

    .benefit-card:hover {
        transform: translateY(-5px);
    }

    .benefit-card i {
        font-size: 2rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .benefit-card h4 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }

    @media (max-width: 768px) {
        .hero h1 {
            font-size: 2rem;
        }

        .main-content h2 {
            font-size: 1.75rem;
        }

        .services-grid,
        .benefits-grid {
            grid-template-columns: 1fr;
        }
    }
</style> 