---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import SolutionsCTA from '../../components/SolutionsCTA.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import Clock from '../../components/icons/clock.astro';
import Certificate from '../../components/icons/certificate.astro';
import ChartLine from '../../components/icons/chart-line.astro';
import Handshake from '../../components/icons/handshake2.astro';
import Lock from '@/components/icons/lock.astro';
import itSupportImage from '../../assets/images/it-support.webp';

const title = "IT Support Services Calgary & Vancouver - Huntertech";
const description = "Professional IT support solutions in Calgary and Vancouver. Local help desk, network management, and proactive maintenance for reliable business operations.";
const keywords = [
    "IT support services",
    "Managed IT solutions",
    "Business IT support",
    "Technical support",
    "IT help desk",
    "IT maintenance",
    "Cloud services support",
    "Hardware support",
    "Software support",
    "IT procurement",
    "IT support Calgary",
    "IT support Vancouver"
];

const structuredData = {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Professional IT Support Services",
    "provider": {
        "@type": "Organization",
        "name": "Huntertech",
        "url": "https://huntertech.ca"
    },
    "description": description,
    "areaServed": [
        {
            "@type": "City",
            "name": "Calgary",
            "address": {
                "@type": "PostalAddress",
                "addressRegion": "AB",
                "addressCountry": "CA"
            }
        },
        {
            "@type": "City",
            "name": "Vancouver",
            "address": {
                "@type": "PostalAddress",
                "addressRegion": "BC",
                "addressCountry": "CA"
            }
        }
    ],
    "serviceType": ["IT Support", "Technical Support", "Managed IT Services"],
    "offers": {
        "@type": "Offer",
        "availability": "https://schema.org/InStock"
    }
};
---

<Layout 
    title={title} 
    description={description}
    canonicalURL="https://huntertech.ca/solutions/it-support/"
    keywords={keywords}
    type="website"
    image={itSupportImage.src}
    structuredData={structuredData}
>
    <Header />
    <main class="service-page">
        <Hero 
            title="IT Support"
            subtitle="Reliable IT support services to keep your business running smoothly"
            backgroundImage={itSupportImage}
            backgroundImageAlt="Huntertech IT support hero image"
            ctaText="Get Started"
            ctaLink="/contact/?form_conversion=it-support-hero-cta"
        />

        <section class="content">
            <div class="container">
                <div class="content-grid">
                    <div class="main-content">
                        <h2>Professional IT Support Services</h2>
                        <p>Our IT support services are designed to provide your business with reliable, responsive, and proactive technical assistance. We ensure your technology infrastructure operates at peak efficiency, allowing you to focus on your core business operations.</p>
                        
                        <div class="services-section">
                            <h3>What We Offer</h3>
                            <div class="services-grid">
                                <ServiceCard 
                                    title="Local Help Desk Support"
                                    description="We don't offshore our helpdesk, which means you are talking to the same friendly knowledgable team every day, just like you had hired in house."
                                />
                                <ServiceCard 
                                    title="Proactive Maintenance"
                                    description="Regular system checks and updates to prevent issues before they impact your business"
                                />
                                <ServiceCard 
                                    title="Cloud Services Support"
                                    description="Expert assistance with cloud infrastructure and applications"
                                />
                                <ServiceCard 
                                    title="Hardware Support"
                                    description="Comprehensive support for all your business hardware"
                                />
                                <ServiceCard 
                                    title="Software Support"
                                    description="Comprehensive support for all your business software and licensing"
                                />
                                <ServiceCard 
                                    title="IT Procurement"
                                    description="Whether it's hardware, software, subscription, cloud we can help you purchase your next IT investment"
                                />
                            </div>
                        </div>

                        <h3>Why Choose Our IT Support?</h3>
                        <div class="features-grid">
                            <div class="feature-card">
                                <Lock color="var(--primary-color)" />
                                <h4>Security Conscious</h4>
                                <p>we protect your data and admin accounts with strict password policiesâ€”no reuse, no weak links. Our managed IT security keeps your business safe from credential leaks and cyber threats.</p>
                            </div>
                            <div class="feature-card">
                                <Certificate color="var(--primary-color)" />
                                <h4>Certified Experts</h4>
                                <p>Highly qualified IT professionals at your service.  Continuous learning ensures we are keeping up to date on emerging trends.</p>
                            </div>
                            <div class="feature-card">
                                <ChartLine color="var(--primary-color)" />
                                <h4>Systems Monitoring</h4>
                                <p>Proactive monitoring help us quickly identify and resolve issues before they impact your business.</p>
                            </div>
                            <div class="feature-card">
                                <Handshake color="var(--primary-color)" />
                                <h4>Dedicated Support</h4>
                                <p>We'll provide you with a dedicated account manager to ensure your needs are met and your issues are resolved.</p>
                            </div>
                        </div>

                        <p>With our comprehensive IT support services, you can focus on growing your business while we handle your technology needs. Contact us today to learn more about how we can help your business thrive in the digital age.</p>
                    </div>
                </div>
            </div>
        </section>
        <SolutionsCTA 
            title="Ready to Get Started with Professional IT Support?"
            description="Contact our team today to discuss your IT needs and discover how our managed IT services can help your business succeed."
            buttonText="Get Started"
            buttonLink="/contact/?form_conversion=it-support-cta"
        />
    </main>
    <Footer />
</Layout>

<style>
    

    .content {
        padding: 4rem 0;
    }

    .content h2 {
        color: var(--primary-heading);
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    .content h3 {
        color: var(--secondary-heading);
        font-size: 1.5rem;
        margin: 2rem 0 1rem;
    }

    .content p {
        color: var(--text-color);
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .feature-card {
        background: var(--white);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-5px);
    }

    .feature-card svg {
        width: 2.5rem;
        height: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .feature-card h3 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }

    .feature-card h4 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }

    .feature-card p {
        color: var(--text-color);
        line-height: 1.6;
    }

    @media (max-width: 768px) {
        .hero {
            padding: 4rem 1rem;
        }

        .content {
            padding: 3rem 1rem;
        }

        .content h2 {
            font-size: 1.8rem;
        }

        .content h3 {
            font-size: 1.3rem;
        }

        .services-grid,
        .features-grid {
            grid-template-columns: 1fr;
        }
    }

    .services-section {
        background: var(--secondary-bg);
        padding: 3rem;
        border-radius: 10px;
        margin: 2rem 0;
    }

    .services-section h3 {
        margin-top: 0;
    }
</style> 