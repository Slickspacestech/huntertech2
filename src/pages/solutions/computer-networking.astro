---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import SolutionsCTA from '../../components/SolutionsCTA.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import Globe from '../../components/icons/globe.astro';
import ChartLine from '../../components/icons/chart-line.astro';
import Shield from '../../components/icons/shield.astro';
import Dollar from '../../components/icons/dollar.astro';
import SEO from '../../components/SEO.astro';

const title = "Computer Networking Services Calgary & Vancouver | IT Solutions";
const description = "Expert computer networking solutions in Calgary and Vancouver. Network design, implementation, and management for reliable business connectivity and performance.";
const keywords = [
    "Computer networking",
    "Network infrastructure",
    "IT infrastructure",
    "Network security",
    "Managed IT services",
    "Network design",
    "IT solutions",
    "Network monitoring",
    "Business networking",
    "Network support",
    "IT services Calgary",
    "IT services Vancouver"
];

const structuredData = {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Computer Networking Solutions",
    "provider": {
        "@type": "Organization",
        "name": "Huntertech",
        "url": "https://huntertech.ca"
    },
    "description": description,
    "areaServed": [
        {
            "@type": "City",
            "name": "Calgary",
            "address": {
                "@type": "PostalAddress",
                "addressRegion": "AB",
                "addressCountry": "CA"
            }
        },
        {
            "@type": "City",
            "name": "Vancouver",
            "address": {
                "@type": "PostalAddress",
                "addressRegion": "BC",
                "addressCountry": "CA"
            }
        }
    ],
    "serviceType": ["Computer Networking", "Network Infrastructure", "IT Services"],
    "offers": {
        "@type": "Offer",
        "availability": "https://schema.org/InStock"
    }
};
---

<Layout title={title} description={description}>
    <SEO
        title={title}
        description={description}
        canonicalURL="https://huntertech.ca/solutions/computer-networking"
        keywords={keywords}
        type="website"
        image="/images/network.webp"
    />
    <Header />
    <main class="service-page">
        <Hero 
            title="Computer Networking"
            subtitle="Build a robust and secure network infrastructure for your business"
            backgroundImage="/images/networking_bg.webp"
            ctaText="Get Started"
            ctaLink="/contact"
        />

        <section class="content">
            <div class="container">
                <div class="content-grid">
                    <div class="main-content">
                        <h2>Managed IT & Network Solutions</h2>
                        <p>As a leading IT services provider in Calgary and Vancouver, we design, implement, and maintain robust network infrastructure solutions that keep your business connected and secure. Our comprehensive managed IT services ensure optimal performance, reliability, and scalability for your organization's needs.</p>
                        
                        <div class="services-section">
                            <h3>Our IT & Networking Services</h3>
                            <div class="services-grid">
                                <ServiceCard 
                                    title="Network Design & IT Infrastructure"
                                    description="Custom network architecture and IT infrastructure planning for businesses in Calgary and Vancouver"
                                />
                                <ServiceCard 
                                    title="IT Infrastructure Setup"
                                    description="Complete network hardware and software implementation with expert IT management"
                                />
                                <ServiceCard 
                                    title="IT Security & Network Protection"
                                    description="Advanced security measures and threat protection for your business IT systems"
                                />
                                <ServiceCard 
                                    title="Managed IT Support"
                                    description="Ongoing IT monitoring, maintenance, and technical support services"
                                />
                            </div>
                        </div>

                        <h3>Why Choose Our IT Services?</h3>
                        <div class="features-grid">
                            <div class="feature-card">
                                <Globe color="var(--primary-color)" />
                                <h4>Global Connectivity</h4>
                                <p>Seamless VPN network solutions for businesses of all sizes.</p>
                            </div>
                            <div class="feature-card">
                                <ChartLine color="var(--primary-color)" />
                                <h4>Performance Monitoring</h4>
                                <p>Real-time monitoring and optimization of network performance.</p>
                            </div>
                            <div class="feature-card">
                                <Shield color="var(--primary-color)" />
                                <h4>Network Security</h4>
                                <p>Advanced security measures to protect your network infrastructure.</p>
                            </div>
                            <div class="feature-card">
                                <Dollar color="var(--primary-color)" />
                                <h4>Cost Efficiency</h4>
                                <p>Optimized solutions that reduce operational costs.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <SolutionsCTA 
            title="Ready to Optimize Your IT Infrastructure?"
            description="Contact us today to discuss your IT needs in Calgary or Vancouver and discover how we can help enhance your business technology."
            buttonText="Contact Us"
            buttonLink="/contact"
        />
    </main>
    <Footer />
</Layout>

<style>
  

    .hero p {
        font-size: 1.2rem;
        max-width: 600px;
        margin: 0 auto;
    }

    .content {
        padding: 4rem 0;
        background: var(--white);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .content-grid {
        display: grid;
        gap: 2rem;
    }

    .main-content h2 {
        color: var(--primary-color);
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    .main-content h3 {
        color: var(--primary-color);
        font-size: 1.5rem;
        margin: 2rem 0 1rem;
    }

    .main-content p {
        color: var(--text-color);
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .services-section {
        background: var(--secondary-bg);
        padding: 3rem;
        border-radius: 10px;
        margin: 2rem 0;
    }

    .services-section h3 {
        margin-top: 0;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .feature-card {
        background: var(--white);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-5px);
    }

    .feature-card svg {
        width: 2.5rem;
        height: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .feature-card h3 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }

    .feature-card p {
        color: var(--text-color);
        line-height: 1.6;
    }

    @media (max-width: 768px) {
        .hero h1 {
            font-size: 2rem;
        }

        .main-content h2 {
            font-size: 1.75rem;
        }

        .services-grid,
        .features-grid {
            grid-template-columns: 1fr;
        }
    }
</style> 