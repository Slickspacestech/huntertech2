---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import SolutionsCTA from '../../components/SolutionsCTA.astro';
import ServiceCard from '../../components/ServiceCard.astro';

const title = "IT Services & Network Solutions in Calgary & Vancouver | Huntertech";
const description = "Leading IT services provider in Calgary and Vancouver. Expert network solutions, managed IT services, and IT management for businesses. Get reliable, scalable IT infrastructure support.";

const structuredData = {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "IT Services & Network Solutions",
    "provider": {
        "@type": "Organization",
        "name": "Huntertech",
        "url": "https://huntertech.com.au"
    },
    "description": description,
    "areaServed": [
        {
            "@type": "City",
            "name": "Calgary",
            "address": {
                "@type": "PostalAddress",
                "addressRegion": "AB",
                "addressCountry": "CA"
            }
        },
        {
            "@type": "City",
            "name": "Vancouver",
            "address": {
                "@type": "PostalAddress",
                "addressRegion": "BC",
                "addressCountry": "CA"
            }
        }
    ],
    "serviceType": ["IT Services", "Network Solutions", "Managed IT"],
    "offers": {
        "@type": "Offer",
        "availability": "https://schema.org/InStock"
    }
};
---

<Layout title={title} description={description}>
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    <Header />
    <main>
        <section class="hero">
            <div class="container">
                <h1>IT Services & Network Solutions</h1>
                <p>Professional IT management and network solutions in Calgary and Vancouver</p>
            </div>
        </section>

        <section class="content">
            <div class="container">
                <div class="content-grid">
                    <div class="main-content">
                        <h2>Managed IT & Network Solutions</h2>
                        <p>As a leading IT services provider in Calgary and Vancouver, we design, implement, and maintain robust network infrastructure solutions that keep your business connected and secure. Our comprehensive managed IT services ensure optimal performance, reliability, and scalability for your organization's needs.</p>
                        
                        <div class="services-section">
                            <h3>Our IT & Networking Services</h3>
                            <div class="services-grid">
                                <ServiceCard 
                                    icon="fa-network-wired"
                                    title="Network Design & IT Infrastructure"
                                    description="Custom network architecture and IT infrastructure planning for businesses in Calgary and Vancouver"
                                />
                                <ServiceCard 
                                    icon="fa-server"
                                    title="IT Infrastructure Setup"
                                    description="Complete network hardware and software implementation with expert IT management"
                                />
                                <ServiceCard 
                                    icon="fa-shield-alt"
                                    title="IT Security & Network Protection"
                                    description="Advanced security measures and threat protection for your business IT systems"
                                />
                                <ServiceCard 
                                    icon="fa-tools"
                                    title="Managed IT Support"
                                    description="Ongoing IT monitoring, maintenance, and technical support services"
                                />
                            </div>
                        </div>

                        <h3>Why Choose Our IT Services?</h3>
                        <div class="benefits-grid">
                            <div class="benefit-card">
                                <i class="fas fa-globe"></i>
                                <h4>Proactive IT Management</h4>
                                <p>We monitor and maintain your IT systems before issues arise</p>
                            </div>
                            <div class="benefit-card">
                                <i class="fas fa-chart-line"></i>
                                <h4>Optimized Performance</h4>
                                <p>Efficient IT solutions for your business needs</p>
                            </div>
                            <div class="benefit-card">
                                <i class="fas fa-shield-virus"></i>
                                <h4>Advanced Security</h4>
                                <p>Comprehensive IT security and protection</p>
                            </div>
                            <div class="benefit-card">
                                <i class="fas fa-dollar-sign"></i>
                                <h4>Cost-Effective IT</h4>
                                <p>Affordable managed IT services in Calgary and Vancouver</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <SolutionsCTA 
            title="Ready to Optimize Your IT Infrastructure?"
            description="Contact us today to discuss your IT needs in Calgary or Vancouver and discover how we can help enhance your business technology."
            buttonText="Contact Us"
            buttonLink="/contact"
        />
    </main>
    <Footer />
</Layout>

<style>
    .hero {
        background: var(--primary-color);
        color: var(--white);
        padding: 4rem 0;
        text-align: center;
    }

    .hero h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .hero p {
        font-size: 1.2rem;
        max-width: 600px;
        margin: 0 auto;
    }

    .content {
        padding: 4rem 0;
        background: var(--white);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .content-grid {
        display: grid;
        gap: 2rem;
    }

    .main-content h2 {
        color: var(--primary-color);
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    .main-content h3 {
        color: var(--primary-color);
        font-size: 1.5rem;
        margin: 2rem 0 1rem;
    }

    .main-content p {
        color: var(--text-color);
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .services-section {
        background: var(--secondary-bg);
        padding: 3rem;
        border-radius: 10px;
        margin: 2rem 0;
    }

    .services-section h3 {
        margin-top: 0;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .benefits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .benefit-card {
        background: var(--white);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease;
    }

    .benefit-card:hover {
        transform: translateY(-5px);
    }

    .benefit-card i {
        font-size: 2rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .benefit-card h4 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }

    @media (max-width: 768px) {
        .hero h1 {
            font-size: 2rem;
        }

        .main-content h2 {
            font-size: 1.75rem;
        }

        .services-grid,
        .benefits-grid {
            grid-template-columns: 1fr;
        }
    }
</style> 