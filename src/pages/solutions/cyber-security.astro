---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import SolutionsCTA from '../../components/SolutionsCTA.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import ChartPie from '../../components/icons/chart-pie.astro';
import Sync from '../../components/icons/sync.astro';
import GraduationHat from '../../components/icons/graduation-hat.astro';
import cybersecurityImage from '../../assets/images/cybersecurity.webp';

const title = "Cybersecurity Services Calgary & Vancouver | IT Security";
const description = "Advanced cybersecurity solutions in Calgary and Vancouver. Endpoint protection, network security, and compliance management to safeguard your business data.";
const keywords = [
    "Cybersecurity solutions",
    "IT security services",
    "Threat protection",
    "Network security",
    "Data protection",
    "Identity management",
    "Security training",
    "Cybersecurity Calgary",
    "Cybersecurity Vancouver"
];

const structuredData = {
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Cyber Security Solutions",
    "provider": {
        "@type": "Organization",
        "name": "Huntertech",
        "url": "https://huntertech.ca"
    },
    "description": description,
    "areaServed": [
        {
            "@type": "City",
            "name": "Calgary",
            "address": {
                "@type": "PostalAddress",
                "addressRegion": "AB",
                "addressCountry": "CA"
            }
        },
        {
            "@type": "City",
            "name": "Vancouver",
            "address": {
                "@type": "PostalAddress",
                "addressRegion": "BC",
                "addressCountry": "CA"
            }
        }
    ],
    "serviceType": ["Cybersecurity", "IT Security", "Network Security"],
    "offers": {
        "@type": "Offer",
        "availability": "https://schema.org/InStock"
    }
};
---

<Layout 
    title={title} 
    description={description}
    canonicalURL="https://huntertech.ca/solutions/cyber-security/"
    keywords={keywords}
    type="website"
    image={cybersecurityImage.src}
    structuredData={structuredData}
>
    <Header />
    <main class="service-page">
        <Hero 
            title="Cyber Security"
            subtitle="Protect your business with comprehensive cybersecurity solutions"
            backgroundImage={cybersecurityImage}
            backgroundImageAlt="Huntertech cybersecurity hero image"
            ctaText="Get Started"
            ctaLink="/contact/?form_conversion=cyber-security-hero-cta"
        />

        <section class="content">
            <div class="container">
                <div class="content-grid">
                    <div class="main-content">
                        <h2>Comprehensive Cyber Security Solutions</h2>
                        <p>Our cyber security services provide multi-layered protection for your business, ensuring your data and systems remain secure against evolving threats. We implement robust security measures while maintaining system performance and user accessibility.</p>
                        
                        <div class="services-section">
                            <h3>Security Services</h3>
                            <div class="services-grid">
                                <ServiceCard 
                                    title="Threat Protection"
                                    description="Advanced protection against malware, ransomware, and other cyber threats"
                                />
                                <ServiceCard 
                                    title="Identity Management"
                                    description="Secure user authentication and access control systems"
                                />
                                <ServiceCard 
                                    title="Network Security"
                                    description="Comprehensive network protection and monitoring"
                                />
                                <ServiceCard 
                                    title="Data Protection"
                                    description="Encryption and secure data storage solutions"
                                />
                            </div>
                        </div>

                        <h3>Why Choose Our Security Solutions?</h3>
                        <div class="features-grid">
                            <a href="/solutions/risk-assessment/?form_conversion=risk-assessment" class="feature-card">
                                <ChartPie color="var(--primary-color)" />
                                <h4>Risk Assessment</h4>
                                <p>Comprehensive evaluation of your security posture and vulnerabilities.</p>
                            </a>
                            <a href="/solutions/continuous-monitoring/?form_conversion=continuous-monitoring" class="feature-card">
                                <Sync color="var(--primary-color)" />
                                <h4>Continuous Monitoring</h4>
                                <p>24/7 monitoring and threat detection to keep your systems secure.</p>
                            </a>
                            <a href="/solutions/security-training/?form_conversion=security-training" class="feature-card">
                                <GraduationHat color="var(--primary-color)" />
                                <h4>Security Training</h4>
                                <p>Employee training programs to build a security-first culture.</p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <SolutionsCTA 
            title="Ready to Enhance Your Security?"
            description="Contact us today to discuss your security needs and discover how we can help protect your business from cyber threats."
            buttonText="Contact Us"
            buttonLink="/contact/?form_conversion=cyber-security-cta"
        />
    </main>
    <Footer />
</Layout>

<style>
  

    .content {
        padding: 4rem 0;
        background: var(--white);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .content-grid {
        display: grid;
        gap: 2rem;
    }

    .main-content h2 {
        color: var(--primary-color);
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    .main-content h3 {
        color: var(--primary-color);
        font-size: 1.5rem;
        margin: 2rem 0 1rem;
    }

    .main-content p {
        color: var(--text-color);
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .services-section {
        background: var(--secondary-bg);
        padding: 3rem;
        border-radius: 10px;
        margin: 2rem 0;
    }

    .services-section h3 {
        margin-top: 0;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .feature-card {
        background: var(--white);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease;
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .feature-card:hover {
        transform: translateY(-5px);
    }

    .feature-card svg {
        width: 2.5rem;
        height: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .feature-card h3 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }

    .feature-card p {
        color: var(--text-color);
        line-height: 1.6;
    }

    @media (max-width: 768px) {
        .hero h1 {
            font-size: 2rem;
        }

        .main-content h2 {
            font-size: 1.75rem;
        }

        .services-grid,
        .features-grid {
            grid-template-columns: 1fr;
        }
    }
</style> 