---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import SolutionsCTA from '../../components/SolutionsCTA.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import ChartPie from '../../components/icons/chart-pie.astro';
import Sync from '../../components/icons/sync.astro';
import GraduationHat from '../../components/icons/graduation-hat.astro';
---

<Layout title="Cyber Security - HunterTech">
    <Header />
    <main class="service-page">
        <Hero 
            title="Cyber Security"
            subtitle="Protect your business with comprehensive cybersecurity solutions"
            backgroundImage="/images/cybersecurity.webp"
            ctaText="Get Started"
            ctaLink="/contact"
        />

        <section class="content">
            <div class="container">
                <div class="content-grid">
                    <div class="main-content">
                        <h2>Comprehensive Cyber Security Solutions</h2>
                        <p>Our cyber security services provide multi-layered protection for your business, ensuring your data and systems remain secure against evolving threats. We implement robust security measures while maintaining system performance and user accessibility.</p>
                        
                        <div class="services-section">
                            <h3>Security Services</h3>
                            <div class="services-grid">
                                <ServiceCard 
                                    icon="fa-shield-alt"
                                    title="Threat Protection"
                                    description="Advanced protection against malware, ransomware, and other cyber threats"
                                />
                                <ServiceCard 
                                    icon="fa-user-shield"
                                    title="Identity Management"
                                    description="Secure user authentication and access control systems"
                                />
                                <ServiceCard 
                                    icon="fa-network-wired"
                                    title="Network Security"
                                    description="Comprehensive network protection and monitoring"
                                />
                                <ServiceCard 
                                    icon="fa-lock"
                                    title="Data Protection"
                                    description="Encryption and secure data storage solutions"
                                />
                            </div>
                        </div>

                        <h3>Why Choose Our Security Solutions?</h3>
                        <div class="features-grid">
                            <div class="feature-card">
                                <ChartPie color="var(--primary-color)" />
                                <h3>Risk Assessment</h3>
                                <p>Comprehensive evaluation of your security posture and vulnerabilities.</p>
                            </div>
                            <div class="feature-card">
                                <Sync color="var(--primary-color)" />
                                <h3>Continuous Monitoring</h3>
                                <p>24/7 monitoring and threat detection to keep your systems secure.</p>
                            </div>
                            <div class="feature-card">
                                <GraduationHat color="var(--primary-color)" />
                                <h3>Security Training</h3>
                                <p>Employee training programs to build a security-first culture.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <SolutionsCTA 
            title="Ready to Enhance Your Security?"
            description="Contact us today to discuss your security needs and discover how we can help protect your business from cyber threats."
            buttonText="Contact Us"
            buttonLink="/contact"
        />
    </main>
    <Footer />
</Layout>

<style>
  

    .content {
        padding: 4rem 0;
        background: var(--white);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .content-grid {
        display: grid;
        gap: 2rem;
    }

    .main-content h2 {
        color: var(--primary-color);
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    .main-content h3 {
        color: var(--primary-color);
        font-size: 1.5rem;
        margin: 2rem 0 1rem;
    }

    .main-content p {
        color: var(--text-color);
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .services-section {
        background: var(--secondary-bg);
        padding: 3rem;
        border-radius: 10px;
        margin: 2rem 0;
    }

    .services-section h3 {
        margin-top: 0;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .feature-card {
        background: var(--white);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-5px);
    }

    .feature-card svg {
        width: 2.5rem;
        height: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .feature-card h3 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }

    .feature-card p {
        color: var(--text-color);
        line-height: 1.6;
    }

    @media (max-width: 768px) {
        .hero h1 {
            font-size: 2rem;
        }

        .main-content h2 {
            font-size: 1.75rem;
        }

        .services-grid,
        .features-grid {
            grid-template-columns: 1fr;
        }
    }
</style> 