---
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import SolutionsCTA from '../../components/SolutionsCTA.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import Headphones from '../../components/icons/headphones.astro';
import itSupport from '../../assets/images/it-support.webp';
import cybersecurity from '../../assets/images/cybersecurity.webp';
import hybridWork from '../../assets/images/hybrid-work.webp';
import procurement from '../../assets/images/procurement.webp';
import networking from '../../assets/images/networking.webp';
import mattHeadshot from '../../assets/images/Matt-Headshot.webp';
import CTABox from '../../components/CTABox.astro';

const title = "Managed IT Services & Support | Calgary & Vancouver";
const description = "Comprehensive managed IT services and support for businesses in Calgary and Vancouver. Get proactive IT management, 24/7 monitoring, and expert technical support.";
const keywords = [
    "Managed IT services",
    "IT support",
    "IT management",
    "Cybersecurity",
    "Network monitoring",
    "Technical support",
    "IT services Calgary",
    "IT services Vancouver"
];

const structuredData = {
    "@context": "https://schema.org",
    "@graph": [
        {
            "@type": "Service",
            "name": "Managed IT Services",
            "description": description,
            "provider": {
                "@type": "Organization",
                "name": "Huntertech",
                "url": "https://huntertech.ca",
                "logo": {
                    "@type": "ImageObject",
                    "url": "/images/huntertech-logo.png"
                }
            },
            "offers": {
                "@type": "Offer",
                "price": "Contact for pricing",
                "priceCurrency": "CAD",
                "availability": "https://schema.org/InStock"
