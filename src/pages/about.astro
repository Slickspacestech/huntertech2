---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Handshake from '../components/icons/handshake2.astro';
import Lightbulb from '../components/icons/lightbulb.astro';
import Users from '../components/icons/users.astro';
import Star from '../components/icons/star.astro';
import Hero from '../components/Hero.astro';
import SolutionsCTA from '../components/SolutionsCTA.astro';
import SEO from '../components/SEO.astro';
import aboutBg from '../assets/images/about-bg.webp';
import buildexHero from '../assets/images/buildex-huntertech.webp';

const title = "About Huntertech | IT Services & Technology Solutions in Calgary & Vancouver";
const description = "Huntertech's mission: Provide exceptional Support, tech solutions and Service. We help businesses in Calgary and Vancouver align their business with technology.";
const keywords = [
    "About Huntertech",
    "IT services company",
    "Technology solutions",
    "IT consulting firm",
    "Managed IT services",
    "Business technology",
    "IT company Calgary",
    "IT company Vancouver"
];

const structuredData = {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "Huntertech",
    "url": "https://huntertech.ca",
    "logo": "https://huntertech.ca/images/Huntertech_logo.webp",
    "description": description,
    "areaServed": [
        {
            "@type": "City",
            "name": "Calgary",
            "address": {
                "@type": "PostalAddress",
                "addressRegion": "AB",
                "addressCountry": "CA"
            }
        },
        {
            "@type": "City",
            "name": "Vancouver",
            "address": {
                "@type": "PostalAddress",
                "addressRegion": "BC",
                "addressCountry": "CA"
            }
        }
    ],
    "contactPoint": [
        {
            "@type": "ContactPoint",
            "telephone": "+1-825-415-6990",
            "contactType": "customer service",
            "areaServed": "CA-AB",
            "availableLanguage": ["English"]
        },
        {
            "@type": "ContactPoint",
            "telephone": "+1-778-819-7411",
            "contactType": "customer service",
            "areaServed": "CA-BC",
            "availableLanguage": ["English"]
        }
    ],
    "sameAs": [
        "https://www.linkedin.com/company/hunter-tech",
        "https://www.facebook.com/huntertechca",
        "https://twitter.com/huntertech"
    ]
};
---

<Layout title={title} description={description}>
    <SEO 
        title={title}
        description={description}
        canonicalURL="https://huntertech.ca/about/"
        keywords={keywords}
        type="website"
        image={aboutBg.src}
        structuredData={structuredData}
    />
    <Header />
    <main>
        <Hero 
            title="About Huntertech"
            subtitle="Your trusted partner in technology solutions"
            backgroundImage={buildexHero}
            backgroundImageAlt="Huntertech team at Buildex"
            ctaText="Contact Us"
            ctaLink="/contact/?form_conversion=hero-about-cta"
        />

        <section class="overview">
            <div class="container">
                <div class="content-grid">
                    <div class="main-content">
                        <h2>Our Story</h2>
                        <p>Huntertech was founded with a vision to provide exceptional IT services that empower businesses to thrive in the digital age. With years of experience in the enterprise technology world, we started Huntertech to provide the same level of service to small and medium-sized businesses.</p>
                        
                        <div class="stats-grid">
                            <div class="stat-card">
                                <span class="stat-number">15+</span>
                                <span class="stat-label">Years Experience</span>
                            </div>
                            <div class="stat-card">
                                <span class="stat-number">20+</span>
                                <span class="stat-label">Happy Clients</span>
                            </div>
                            <div class="stat-card">
                                <span class="stat-number">Friendly</span>
                                <span class="stat-label">Support</span>
                            </div>
                            <div class="stat-card">
                                <span class="stat-number">100%</span>
                                <span class="stat-label">Satisfaction</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="mission">
            <div class="container">
                <div class="mission-content">
                    <h2>Our Mission</h2>
                    <p>To deliver modern technology solutions that drive business growth and success, reduce costly downtime while providing exceptional service, support and peace of mind to our clients.</p>
                    
                    <h3>Our Values</h3>
                    <div class="values-grid">
                        <div class="value-card">
                            <Handshake color="var(--primary-color)" />
                            <h4>Integrity</h4>
                            <p>Honest and transparent in all our dealings</p>
                        </div>
                        <div class="value-card">
                            <Lightbulb color="var(--primary-color)" />
                            <h4>Innovation</h4>
                            <p>Constantly evolving and embracing new technologies</p>
                        </div>
                        <div class="value-card">
                            <Users color="var(--primary-color)" />
                            <h4>Collaboration</h4>
                            <p>Working together to achieve common goals</p>
                        </div>
                        <div class="value-card">
                            <Star color="var(--primary-color)" />
                            <h4>Excellence</h4>
                            <p>Committed to delivering the highest quality service</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        

        <section class="cta">
            <div class="container">
                <h2>Ready to Work With Us?</h2>
                <p>Let's discuss how we can help your business grow</p>
                <a href="/contact/?form_conversion=about-cta" class="cta-button">Contact Us</a>
            </div>
        </section>
    </main>
    <Footer />
</Layout>

<style>
    .overview, .mission, .team {
        padding: 4rem 0;
    }

    .overview {
        background: var(--white);
    }

    .mission {
        background: var(--secondary-bg);
    }

    .team {
        background: var(--white);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .content-grid {
        display: grid;
        gap: 2rem;
    }

    h2 {
        color: var(--primary-color);
        font-size: clamp(1.5rem, 5vw, 2rem);
        margin-bottom: 1.5rem;
        text-align: center;
    }

    h3 {
        color: var(--primary-color);
        font-size: clamp(1.25rem, 4vw, 1.5rem);
        margin: 2rem 0 1rem;
        text-align: center;
    }

    p {
        color: var(--text-color);
        line-height: 1.6;
        margin-bottom: 1.5rem;
        font-size: clamp(1rem, 3vw, 1.1rem);
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1.5rem;
        margin: 2rem 0;
    }

    .stat-card {
        text-align: center;
        padding: 1.5rem;
        background: var(--white);
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .stat-number {
        display: block;
        font-size: clamp(1.75rem, 4vw, 2.5rem);
        font-weight: bold;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: var(--text-color);
        font-size: clamp(0.9rem, 2.5vw, 1.1rem);
    }

    .values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin: 2rem 0;
    }

    .value-card {
        background: var(--white);
        padding: 1.5rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease;
    }

    .value-card:hover {
        transform: translateY(-5px);
    }

    .value-card svg {
        width: 2rem;
        height: 2rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .value-card h4 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: clamp(1.1rem, 3vw, 1.2rem);
    }

    .value-card p {
        font-size: clamp(0.9rem, 2.5vw, 1rem);
        margin-bottom: 0;
    }

    .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .team-card {
        background: var(--white);
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        text-align: center;
    }

    .team-image {
        width: 100%;
        height: 300px;
        overflow: hidden;
    }

    .team-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .team-card h3 {
        margin: 1.5rem 0 0.5rem;
        font-size: 1.5rem;
    }

    .team-card .position {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .team-card .bio {
        padding: 0 1.5rem 1.5rem;
    }

    .cta {
        background: var(--dark-bg);
        color: var(--white);
        padding: 3rem 0;
        text-align: center;
    }

    .cta h2 {
        color: var(--white);
        font-size: clamp(1.5rem, 5vw, 2rem);
        margin-bottom: 1rem;
    }

    .cta p {
        color: var(--white);
        font-size: clamp(1rem, 3vw, 1.2rem);
        margin-bottom: 2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .cta-button {
        display: inline-block;
        background: var(--button-color);
        color: var(--white);
        padding: 0.875rem 1.75rem;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 600;
        transition: background-color 0.3s ease;
        font-size: clamp(0.9rem, 2.5vw, 1rem);
    }

    .cta-button:hover {
        background: var(--button-hover);
        color: var(--white);
    }

    @media (max-width: 768px) {
        .overview, .mission, .team {
            padding: 2rem 0;
        }

        .container {
            padding: 0 1rem;
        }

        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
        }

        .values-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .stat-card, .value-card {
            padding: 1rem;
        }

        .cta {
            padding: 2rem 0;
        }
    }

    @media (max-width: 480px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }

        .container {
            padding: 0 0.75rem;
        }
    }
</style> 