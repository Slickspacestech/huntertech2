---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="About Us - Huntertech">
    <Header />
    <main>
        <section class="hero">
            <div class="container">
                <h1>About Huntertech</h1>
                <p>Your trusted partner in technology solutions</p>
            </div>
        </section>

        <section class="overview">
            <div class="container">
                <div class="content-grid">
                    <div class="main-content">
                        <h2>Our Story</h2>
                        <p>Huntertech was founded with a vision to provide exceptional IT services that empower businesses to thrive in the digital age. With years of experience in the enterprise technology world, we started Huntertech to provide the same level of service to small and medium-sized businesses.</p>
                        
                        <div class="stats-grid">
                            <div class="stat-card">
                                <span class="stat-number">15+</span>
                                <span class="stat-label">Years Experience</span>
                            </div>
                            <div class="stat-card">
                                <span class="stat-number">20+</span>
                                <span class="stat-label">Happy Clients</span>
                            </div>
                            <div class="stat-card">
                                <span class="stat-number">Friendly</span>
                                <span class="stat-label">Support</span>
                            </div>
                            <div class="stat-card">
                                <span class="stat-number">100%</span>
                                <span class="stat-label">Satisfaction</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="mission">
            <div class="container">
                <div class="mission-content">
                    <h2>Our Mission</h2>
                    <p>To deliver modern technology solutions that drive business growth and success, reduce costly downtime while providing exceptional service, support and peace of mind to our clients.</p>
                    
                    <h3>Our Values</h3>
                    <div class="values-grid">
                        <div class="value-card">
                            <i class="fas fa-handshake"></i>
                            <h4>Integrity</h4>
                            <p>Honest and transparent in all our dealings</p>
                        </div>
                        <div class="value-card">
                            <i class="fas fa-lightbulb"></i>
                            <h4>Innovation</h4>
                            <p>Constantly evolving and embracing new technologies</p>
                        </div>
                        <div class="value-card">
                            <i class="fas fa-users"></i>
                            <h4>Collaboration</h4>
                            <p>Working together to achieve common goals</p>
                        </div>
                        <div class="value-card">
                            <i class="fas fa-star"></i>
                            <h4>Excellence</h4>
                            <p>Committed to delivering the highest quality service</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        

        <section class="cta">
            <div class="container">
                <h2>Ready to Work With Us?</h2>
                <p>Let's discuss how we can help your business grow</p>
                <a href="/contact" class="cta-button">Contact Us</a>
            </div>
        </section>
    </main>
    <Footer />
</Layout>

<style>
    .hero {
        background: var(--primary-color);
        color: var(--white);
        padding: 4rem 0;
        text-align: center;
    }

    .hero h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .hero p {
        font-size: 1.2rem;
        max-width: 600px;
        margin: 0 auto;
    }

    .overview, .mission, .team {
        padding: 4rem 0;
    }

    .overview {
        background: var(--white);
    }

    .mission {
        background: var(--secondary-bg);
    }

    .team {
        background: var(--white);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .content-grid {
        display: grid;
        gap: 2rem;
    }

    h2 {
        color: var(--primary-color);
        font-size: 2rem;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    h3 {
        color: var(--primary-color);
        font-size: 1.5rem;
        margin: 2rem 0 1rem;
        text-align: center;
    }

    p {
        color: var(--text-color);
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin: 3rem 0;
    }

    .stat-card {
        text-align: center;
        padding: 2rem;
        background: var(--white);
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .stat-number {
        display: block;
        font-size: 2.5rem;
        font-weight: bold;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: var(--text-color);
        font-size: 1.1rem;
    }

    .values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .value-card {
        background: var(--white);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease;
    }

    .value-card:hover {
        transform: translateY(-5px);
    }

    .value-card i {
        font-size: 2rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .value-card h4 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }

    .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
    }

    .team-card {
        background: var(--white);
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        text-align: center;
    }

    .team-image {
        width: 100%;
        height: 300px;
        overflow: hidden;
    }

    .team-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .team-card h3 {
        margin: 1.5rem 0 0.5rem;
        font-size: 1.5rem;
    }

    .team-card .position {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .team-card .bio {
        padding: 0 1.5rem 1.5rem;
    }

    .cta {
        background: var(--dark-bg);
        color: var(--white);
        padding: 4rem 0;
        text-align: center;
    }

    .cta h2 {
        color: var(--white);
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .cta p {
        color: var(--white);
        font-size: 1.2rem;
        margin-bottom: 2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .cta-button {
        display: inline-block;
        background: var(--button-color);
        color: var(--white);
        padding: 1rem 2rem;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

    .cta-button:hover {
        background: var(--button-hover);
        color: var(--white);
    }

    @media (max-width: 768px) {
        .hero h1 {
            font-size: 2rem;
        }

        .stats-grid {
            grid-template-columns: 1fr 1fr;
        }

        .values-grid {
            grid-template-columns: 1fr;
        }

        .team-grid {
            grid-template-columns: 1fr;
        }

        .team-image {
            height: 250px;
        }
    }
</style> 