---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ArrowLeft from '../../components/icons/arrow-left.astro';
import { posts, slugMap, type BlogPost } from '../../data/blog-posts';

interface PathProps {
    post: BlogPost;
    isRedirect?: boolean;
}

export function getStaticPaths() {
    // Generate paths for both new and old slugs
    const paths: { params: { slug: string }; props: PathProps }[] = [];
    
    // Add paths for new slugs
    posts.forEach(post => {
        paths.push({
            params: { slug: post.slug },
            props: { post }
        });
    });
    
    // Add paths for old slugs
    Object.entries(slugMap).forEach(([oldSlug, newSlug]) => {
        const post = posts.find(p => p.slug === newSlug);
        if (post) {
            paths.push({
                params: { slug: oldSlug },
                props: { post, isRedirect: true }
            });
        }
    });
    
    return paths;
}

const { post, isRedirect } = Astro.props;

// If this is a redirect from an old slug, redirect to the new URL
if (isRedirect) {
    return Astro.redirect(`/blog/${post.slug}`);
}
---

<Layout title={`${post.title} - Huntertech Blog`}>
    <Header />
    <main class="blog-post">
        <article class="post-content">
            <div class="post-header">
                <div class="container">
                    <div class="post-meta">
                        <span class="category">{post.category}</span>
                        <span class="date">{new Date(post.date).toLocaleDateString()}</span>
                        <span class="author">By {post.author}</span>
                    </div>
                    <h1>{post.title}</h1>
                </div>
            </div>
            <div class="post-image">
                <img src={post.image} alt={post.title} />
            </div>
            <div class="container">
                <div class="post-body" set:html={post.content} />
                <div class="post-footer">
                    <div class="share-buttons">
                        <h3>Share this article</h3>
                        <div class="social-links">
                            <a href="#" class="social-link">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="social-link">
                                <i class="fab fa-linkedin"></i>
                            </a>
                            <a href="#" class="social-link">
                                <i class="fab fa-facebook"></i>
                            </a>
                        </div>
                    </div>
                    <div class="back-link">
                        <a href="/blog">
                            <ArrowLeft color="var(--primary-color)" /> Back to Blog
                        </a>
                    </div>
                </div>
            </div>
        </article>
    </main>
    <Footer />
</Layout>

<style>
    .blog-post {
        padding-top: 80px;
    }

    .post-header {
        background: linear-gradient(rgba(44, 62, 80, 0.9), rgba(44, 62, 80, 0.9)), url('/images/blog-header-bg.jpg');
        background-size: cover;
        background-position: center;
        color: var(--white);
        padding: 4rem 1rem;
        text-align: center;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .post-meta {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
        font-size: 0.9rem;
    }

    .category {
        background: var(--secondary-color);
        color: var(--white);
        padding: 0.3rem 1rem;
        border-radius: 20px;
    }

    .post-header h1 {
        font-size: 2.5rem;
        line-height: 1.3;
        margin: 0;
    }

    .post-image {
        width: 100%;
        height: 400px;
        overflow: hidden;
    }

    .post-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .post-body {
        padding: 3rem 0;
        color: var(--text-color);
        line-height: 1.8;
    }

    .post-body h2 {
        color: var(--primary-color);
        font-size: 1.8rem;
        margin: 2rem 0 1rem;
    }

    .post-body p {
        margin-bottom: 1.5rem;
    }

    .post-footer {
        padding: 2rem 0;
        border-top: 1px solid #eee;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .share-buttons h3 {
        color: var(--text-color);
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }

    .social-links {
        display: flex;
        gap: 1rem;
    }

    .social-link {
        color: var(--text-color);
        font-size: 1.2rem;
        transition: color 0.3s ease;
    }

    .social-link:hover {
        color: var(--secondary-color);
    }

    .back-link {
        margin-bottom: 2rem;
    }

    .back-link a {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
    }

    .back-link svg {
        width: 1.25rem;
        height: 1.25rem;
    }

    @media (max-width: 768px) {
        .post-header h1 {
            font-size: 2rem;
        }

        .post-image {
            height: 300px;
        }

        .post-meta {
            flex-direction: column;
            gap: 0.5rem;
        }

        .post-footer {
            flex-direction: column;
            gap: 2rem;
            text-align: center;
        }

        .social-links {
            justify-content: center;
        }
    }
</style> 