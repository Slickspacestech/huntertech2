<script>
    // Reading progress indicator
    function updateReadingProgress() {
        const article = document.querySelector('article');
        const progressBar = document.querySelector('.reading-progress-bar');
        
        if (!article || !progressBar) return;
        
        const articleTop = article.offsetTop;
        const articleHeight = article.offsetHeight;
        const windowHeight = window.innerHeight;
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        
        const totalScrollable = articleHeight + articleTop - windowHeight;
        const scrolled = scrollTop - articleTop + windowHeight;
        const progress = Math.max(0, Math.min(100, (scrolled / totalScrollable) * 100));
        
        progressBar.style.width = `${progress}%`;
    }
    
    // Throttled scroll handler for better performance
    let ticking = false;
    function handleScroll() {
        if (!ticking) {
            requestAnimationFrame(() => {
                updateReadingProgress();
                ticking = false;
            });
            ticking = true;
        }
    }
    
    // Initialize on load and add scroll listener
    document.addEventListener('DOMContentLoaded', updateReadingProgress);
    window.addEventListener('scroll', handleScroll);
    window.addEventListener('resize', updateReadingProgress);
</script>

 