---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Solutions - Huntertech">
    <Header />
    <main>
        <section class="hero">
            <div class="container">
                <h1>Our Solutions</h1>
                <p>Comprehensive IT solutions tailored for the building industry</p>
            </div>
        </section>

        <section class="solutions">
            <div class="container">
                <div class="solutions-grid">
                    <div class="solution-card">
                        <div class="solution-icon">
                            <i class="fas fa-server"></i>
                        </div>
                        <h3>Infrastructure Management</h3>
                        <p>Complete management of your IT infrastructure, including servers, networks, and cloud services.</p>
                        <ul>
                            <li>24/7 monitoring and support</li>
                            <li>Proactive maintenance</li>
                            <li>Cloud migration and management</li>
                            <li>Disaster recovery planning</li>
                        </ul>
                    </div>

                    <div class="solution-card">
                        <div class="solution-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <h3>Cybersecurity</h3>
                        <p>Comprehensive security solutions to protect your business data and systems.</p>
                        <ul>
                            <li>Advanced threat protection</li>
                            <li>Security assessments</li>
                            <li>Compliance management</li>
                            <li>Employee security training</li>
                        </ul>
                    </div>

                    <div class="solution-card">
                        <div class="solution-icon">
                            <i class="fas fa-mobile-alt"></i>
                        </div>
                        <h3>Digital Transformation</h3>
                        <p>Modernize your business with cutting-edge technology solutions.</p>
                        <ul>
                            <li>Business process automation</li>
                            <li>Digital workflow implementation</li>
                            <li>Mobile device management</li>
                            <li>Collaboration tools integration</li>
                        </ul>
                    </div>

                    <div class="solution-card">
                        <div class="solution-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <h3>Business Intelligence</h3>
                        <p>Transform your data into actionable insights for better decision-making.</p>
                        <ul>
                            <li>Data analytics and reporting</li>
                            <li>Performance monitoring</li>
                            <li>Business process optimization</li>
                            <li>Custom dashboard creation</li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <section class="cta">
            <div class="container">
                <h2>Ready to Transform Your IT Infrastructure?</h2>
                <p>Contact us today to discuss how our solutions can benefit your business.</p>
                <a href="/contact" class="cta-button">Get Started</a>
            </div>
        </section>
    </main>
    <Footer />
</Layout>

<style>
    .hero {
        background: var(--primary-color);
        color: var(--white);
        padding: 4rem 0;
        text-align: center;
    }

    .hero h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .hero p {
        font-size: 1.2rem;
        max-width: 600px;
        margin: 0 auto;
    }

    .solutions {
        padding: 4rem 0;
        background: var(--white);
    }

    .solutions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .solution-card {
        background: var(--white);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .solution-card:hover {
        transform: translateY(-5px);
    }

    .solution-icon {
        font-size: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 1.5rem;
    }

    .solution-card h3 {
        color: var(--primary-color);
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    .solution-card p {
        color: var(--text-color);
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .solution-card ul {
        list-style: none;
        padding: 0;
    }

    .solution-card ul li {
        margin-bottom: 0.5rem;
        padding-left: 1.5rem;
        position: relative;
    }

    .solution-card ul li:before {
        content: "âœ“";
        color: var(--primary-color);
        position: absolute;
        left: 0;
    }

    .cta {
        background: var(--primary-color);
        color: var(--white);
        padding: 4rem 0;
        text-align: center;
    }

    .cta h2 {
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .cta p {
        font-size: 1.2rem;
        margin-bottom: 2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .cta-button {
        display: inline-block;
        background: var(--white);
        color: var(--primary-color);
        padding: 1rem 2rem;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

    .cta-button:hover {
        background: var(--secondary-color);
        color: var(--white);
    }

    @media (max-width: 768px) {
        .hero h1 {
            font-size: 2rem;
        }

        .solutions-grid {
            grid-template-columns: 1fr;
        }

        .cta h2 {
            font-size: 1.75rem;
        }
    }
</style> 