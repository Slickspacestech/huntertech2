---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MapMarker from '../components/icons/map-marker.astro';
import Phone from '../components/icons/phone.astro';
import Envelope from '../components/icons/envelope.astro';
import Laptop from '../components/icons/laptop.astro';
import Shield from '../components/icons/shield.astro';
import Cloud2 from '../components/icons/cloud2.astro';
import NetworkWired from '../components/icons/network-wired.astro';
import Clock from '../components/icons/clock.astro';
import Certificate from '../components/icons/certificate.astro';
import Handshake from '../components/icons/handshake.astro';
import ChartLine from '../components/icons/chart-line.astro';
import Hero from '../components/Hero.astro';
import LocalPin from '../components/icons/local-pin.astro';
import SolutionsCTA from '../components/SolutionsCTA.astro';
import calgaryBg from '../assets/images/calgary-bg.webp';

const title = "Managed IT Services Calgary | Expert IT Support & Cybersecurity | Huntertech";
const description = "Calgary's trusted managed IT services provider. Expert IT support, cybersecurity, and cloud solutions for architecture & engineering firms. Call (825) 415-6990.";
const keywords = [
    "IT services Calgary",
    "IT support Calgary",
    "managed IT services Calgary",
    "cybersecurity Calgary",
    "business IT solutions Calgary"
];

const breadcrumbData = {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
        {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://huntertech.ca"
        },
        {
            "@type": "ListItem",
            "position": 2,
            "name": "Calgary",
            "item": "https://huntertech.ca/calgary/"
        }
    ]
};

const calgaryBusinessData = {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "@id": "https://huntertech.ca/calgary/",
    "name": "Huntertech",
    "image": "https://huntertech.ca/images/huntertech-logo.png",
    "url": "https://huntertech.ca",
    "telephone": "825-415-6990",
    "priceRange": "$$",
    "address": {
        "@type": "PostalAddress",
        "streetAddress": "4030 8 St SE",
        "addressLocality": "Calgary",
        "addressRegion": "AB",
        "postalCode": "T2G 3A7",
        "addressCountry": "CA"
    },
    "geo": {
        "@type": "GeoCoordinates",
        "latitude": "51.0677",
        "longitude": "-113.9777"
    },
    "openingHoursSpecification": [{
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday"
        ],
        "opens": "08:00",
        "closes": "17:00"
    }],
    "sameAs": [
        "https://www.linkedin.com/company/hunter-tech",
        "https://www.facebook.com/huntertechca"
    ]
};
---

<Layout 
    title={title} 
    description={description}
    canonicalURL="https://huntertech.ca/calgary/"
    keywords={keywords}
    type="website"
    image={calgaryBg.src}
>
    <Fragment slot="head">
        <script type="application/ld+json" set:html={JSON.stringify([calgaryBusinessData, breadcrumbData])} />
    </Fragment>
    <Header />
    <main>
        <Hero 
            title="Managed IT Services Calgary"
            subtitle="Expert IT support and cybersecurity for Calgary businesses"
            backgroundImage={calgaryBg}
            backgroundImageAlt="Calgary cityscape with mountains"
            ctaText="Get Started"
            ctaLink="/contact/?form_conversion=calgary-hero-cta"
        />

        <section class="location-info">
            <div class="container">
                <div class="location-grid">
                    <div class="location-details">
                        <h2>Calgary's Premier Managed IT Services Provider</h2>
                        <p>Serving Calgary businesses for over 15 years with comprehensive managed IT services, cybersecurity solutions, and expert IT support. We specialize in architecture, engineering, accounting, and legal firms throughout the Calgary area.</p>
                        <div class="contact-card">
                            <div class="contact-item">
                                <MapMarker color="var(--button-color)" />
                                <div>
                                    <h3>Address</h3>
                                    <p>4030 8 St SE</p>
                                    <p>Calgary, AB T2G 3A7</p>
                                </div>
                            </div>
                            <div class="contact-item">
                                <Phone color="var(--button-color)" />
                                <div>
                                    <h3>Phone</h3>
                                    <p>825 415 6990</p>
                                </div>
                            </div>
                            <div class="contact-item">
                                <Envelope color="var(--button-color)" />
                                <div>
                                    <h3>Email</h3>
                                    <p>info@huntertech.ca</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="map-container">
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2507.915289399271!2d-113.9777!3d51.0677!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x53716521bdabb8b7%3A0x1c3c3c3c3c3c3c3c!2s4121%2023b%20St%20NE%2C%20Calgary%2C%20AB%20T2E%207V9!5e0!3m2!1sen!2sca!4v1620000000000!5m2!1sen!2sca" 
                            width="100%" 
                            height="450" 
                            style="border:0;" 
                            allowfullscreen="" 
                            loading="lazy">
                        </iframe>
                    </div>
                </div>
            </div>
        </section>

        <section class="services">
            <div class="container">
                <h2>Comprehensive Managed IT Services in Calgary</h2>
                <p>From downtown Calgary to the surrounding areas, we provide complete managed IT services tailored to your business needs. Our Calgary-based team delivers proactive IT support, robust cybersecurity, and scalable technology solutions.</p>
                <div class="services-grid">
                    <div class="service-card">
                        <Laptop color="var(--button-color)" />
                        <h4>Managed IT Support Calgary</h4>
                        <p>Proactive IT monitoring, help desk support, and technology management for Calgary businesses</p>
                    </div>
                    <div class="service-card">
                        <Shield color="var(--button-color)" />
                        <h4>Calgary Cybersecurity Services</h4>
                        <p>Advanced threat protection, security awareness training, and compliance solutions for Calgary businesses</p>
                    </div>
                    <div class="service-card">
                        <Cloud2 color="var(--button-color)" />
                        <h4>Cloud Services</h4>
                        <p>Secure and scalable cloud infrastructure for Calgary companies</p>
                    </div>
                    <div class="service-card">
                        <NetworkWired color="var(--button-color)" />
                        <h4>Network Solutions</h4>
                        <p>Reliable and efficient network infrastructure in Calgary</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="why-choose-us">
            <div class="container">
                <h2>Why Choose Our Managed IT Services in Calgary?</h2>
                <p>As Calgary's trusted IT services provider, we understand the unique technology challenges facing local businesses. Our team has deep expertise in supporting Calgary's architecture, engineering, and professional services sectors.</p>
                <div class="benefits-grid">
                    <div class="benefit-card">
                        <LocalPin color="var(--button-color)" />
                        <h4>Calgary-Based IT Team</h4>
                        <p>Local IT professionals who understand Calgary business environments and provide personalized managed IT services</p>
                    </div>
                    <div class="benefit-card">
                        <Certificate color="var(--button-color)" />
                        <h4>Certified Experts</h4>
                        <p>Highly qualified IT professionals serving Calgary businesses</p>
                    </div>
                    <div class="benefit-card">
                        <Handshake color="var(--button-color)" />
                        <h4>Calgary Industry Expertise</h4>
                        <p>Specialized managed IT services for Calgary architecture firms, engineering companies, accounting practices, and legal offices</p>
                    </div>
                    <div class="benefit-card">
                        <ChartLine color="var(--button-color)" />
                        <h4>Proven Results</h4>
                        <p>Track record of successful IT implementations in Calgary</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="cta">
            <div class="container">
                <h2>Ready to Transform Your Calgary Business with Managed IT Services?</h2>
                <p>Get a free IT assessment from Calgary's trusted managed IT services provider. Call (825) 415-6990 or contact us online.</p>
                <a href="/contact/?form_conversion=calgary-cta" class="cta-button">Contact Us</a>
            </div>
        </section>
    </main>
    <Footer />
</Layout>

<style>
    .hero {
        background: var(--primary-color);
        color: var(--white);
        padding: 6rem 0 4rem;
        text-align: center;
    }

    .location-info {
        padding: 4rem 0;
    }

    .location-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: start;
    }

    .location-details h2 {
        margin-bottom: 2rem;
        color: var(--primary-heading);
    }

    .contact-card {
        background: var(--white);
        padding: 2rem;
        border-radius: var(--radius-lg);
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .contact-item {
        display: flex;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .contact-item:last-child {
        margin-bottom: 0;
    }

    .contact-item i {
        font-size: 1.5rem;
        color: var(--button-color);
    }

    .contact-item h3 {
        margin-bottom: 0.5rem;
        color: var(--secondary-heading);
    }

    .map-container {
        border-radius: var(--radius-lg);
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .services {
        background: var(--secondary-bg);
        padding: 4rem 0;
    }

    .services h2 {
        text-align: center;
        margin-bottom: 3rem;
        color: var(--primary-heading);
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    .service-card {
        background: var(--white);
        padding: 2rem;
        border-radius: var(--radius-lg);
        text-align: center;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

    .service-card:hover {
        transform: translateY(-5px);
    }

    .service-card i {
        font-size: 2.5rem;
        color: var(--button-color);
        margin-bottom: 1rem;
    }

    .service-card h4 {
        margin-bottom: 1rem;
        color: var(--secondary-heading);
    }

    .why-choose-us {
        padding: 4rem 0;
        background: var(--white);
    }

    .why-choose-us h2 {
        text-align: center;
        margin-bottom: 3rem;
        color: var(--primary-heading);
    }

    .benefits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    .benefit-card {
        background: var(--white);
        padding: 2rem;
        border-radius: var(--radius-lg);
        text-align: center;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

    .benefit-card:hover {
        transform: translateY(-5px);
    }

    .benefit-card i {
        font-size: 2.5rem;
        color: var(--button-color);
        margin-bottom: 1rem;
    }

    .benefit-card h4 {
        margin-bottom: 1rem;
        color: var(--secondary-heading);
    }

    .cta {
        background: var(--dark-bg);
        color: var(--white);
        padding: 4rem 0;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .cta::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 1;
    }

    .cta .container {
        position: relative;
        z-index: 2;
    }

    .cta h2 {
        margin-bottom: 1rem;
        font-size: 2.5rem;
        font-weight: 700;
    }

    .cta p {
        margin-bottom: 2rem;
        opacity: 0.9;
        font-size: 1.2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .cta-button {
        display: inline-block;
        background: var(--button-color);
        color: var(--white);
        padding: 1rem 2.5rem;
        border-radius: var(--radius-md);
        text-decoration: none;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .cta-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        background: var(--button-color);
        color: var(--white);
    }

    @media (max-width: 768px) {
        .location-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .hero {
            padding: 4rem 0 2rem;
        }

        .hero h1 {
            font-size: 2rem;
        }

        .cta {
            padding: 3rem 0;
        }

        .cta h2 {
            font-size: 2rem;
        }

        .cta p {
            font-size: 1.1rem;
            padding: 0 1rem;
        }

        .cta-button {
            width: 90%;
            max-width: 300px;
            text-align: center;
        }

        .benefits-grid {
            grid-template-columns: 1fr;
        }
    }
</style> 