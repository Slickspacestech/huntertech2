---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
import Headphones from '../components/icons/headphones.astro';
import Shield from '../components/icons/shield.astro';
import Checkmark from '../components/icons/checkmark.astro';
import ChartLine from '../components/icons/chart-line.astro';
import MapleLeaf from '../components/icons/maple-leaf.astro';
