            // Collect selected addons
            const selectedAddons = [];
            let addonCost = 0;
            document.querySelectorAll('input[name="addon"]:checked').forEach(addon => {
                const value = parseInt(addon.value);
                const name = addon.getAttribute('data-name');
                selectedAddons.push({
                    name: name,
                    pricePerUser: value,
                    totalPrice: numUsers * value
                });
                addonCost += numUsers * value;
            });
            
            const baseCost = numUsers * planPrice;
            const totalCost = baseCost + addonCost;
            
