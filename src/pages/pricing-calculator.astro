<script>
    // Pricing calculator logic
    function updateCalculation() {
        const numUsers = parseInt(document.getElementById('num-users').value) || 0;
        const selectedPlan = document.querySelector('input[name="plan"]:checked');
        const planPrice = selectedPlan ? parseInt(selectedPlan.value) : 125;
        
        // Calculate base cost
        const baseCost = numUsers * planPrice;
        
        // Calculate addon costs
        let addonCost = 0;
        const selectedAddons = document.querySelectorAll('input[name="addon"]:checked');
        selectedAddons.forEach(addon => {
            addonCost += numUsers * parseInt(addon.value);
        });
        
        // Update display
        const totalCost = baseCost + addonCost;
        document.getElementById('base-cost').textContent = `$${baseCost.toLocaleString()}`;
        document.getElementById('addon-cost').textContent = `$${addonCost.toLocaleString()}`;
        document.getElementById('total-cost').textContent = `$${totalCost.toLocaleString()}`;
        document.getElementById('annual-cost').textContent = `$${(totalCost * 12).toLocaleString()}`;
    }

    // Show/hide addon options based on selected plan
    function toggleAddonsByPlan() {
        const selectedPlan = document.querySelector('input[name="plan"]:checked');
        const securityUpgrades = document.querySelectorAll('.security-upgrade');
        const essentialUpgrades = document.querySelectorAll('.essential-upgrade');
        const universalPhish = document.querySelectorAll('.universal-phish');
        
        // Clear all addons first
        securityUpgrades.forEach(addon => {
            addon.classList.remove('show');
            const checkbox = addon.querySelector('input[type="checkbox"]');
            if (checkbox) checkbox.checked = false;
        });
        essentialUpgrades.forEach(addon => {
            addon.classList.remove('show');
            const checkbox = addon.querySelector('input[type="checkbox"]');
            if (checkbox) checkbox.checked = false;
        });
        universalPhish.forEach(addon => {
            addon.classList.remove('show');
            const checkbox = addon.querySelector('input[type="checkbox"]');
            if (checkbox) checkbox.checked = false;
        });
        
        if (selectedPlan) {
            if (selectedPlan.value === '35') {
                // Security Essentials - show security upgrade options, hide PhishTitan (already included)
                securityUpgrades.forEach(addon => {
                    addon.classList.add('show');
